@{
}

@model Portfolio.Models.Message


<div class="main-content">
    <div>
        <h3 class="text-center text-4xl">Contact Me </h3>
    </div>

    <div class="mt-6 text-center">
        <p class="text-gray-700 mb-4 text-2xl">Follow me on social media</p>
        <div class="flex justify-center space-x-4">
            <a href="https://www.instagram.com/_itzrzh_/" target="_blank" class="text-pink-500 hover:text-pink-700 transition-colors duration-300">
                <img src="/img/instagram.png" alt="Instagram" class="w-10 h-10">
            </a>
            <a href="https://www.linkedin.com/in/roshan-peter-309713302" target="_blank" class="text-pink-500 hover:text-pink-700 transition-colors duration-300">
                <img src="/img/lk.png" alt="LinkedIn" class="w-10 h-10">
            </a>
        </div>
    </div>

    <div class="bg-transparent flex items-center justify-center mt-5">
        <div class="w-full p-8 bg-white bg-opacity-50 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Send a message</h2>
            <form method="POST" class="space-y-4" asp-controller="Home" asp-action="Contact">

                @if (TempData["code"] != null)
                {
                    @if (TempData["code"].ToString() == "1")
                    {
                        <div id="success-message" class="top-0 left-0 w-full p-4 bg-green-500 text-white text-center">
                            <p>Message sent successfully!</p>
                        </div>
                    }

                    @if (TempData["code"].ToString() == "0")
                    {
                        <div id="error-message" class="top-0 left-0 w-full p-4 bg-red-500 text-white text-center">
                            <p>An error occurred. Please try again.</p>
                        </div>
                    }
                }

                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" id="name" asp-for="Name" name="name" class="w-full px-4 py-2 mt-1 text-gray-700 bg-sky-100 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent focus:ring-opacity-50 focus:ring-blue-400" required>
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Email (optional)</label>
                    <input type="email" id="email" asp-for="Email" name="email" class="w-full px-4 py-2 mt-1 text-gray-700 bg-sky-100 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent focus:ring-opacity-50 focus:ring-blue-400">
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                    <textarea id="message" asp-for="MessageText" rows="4"
                              class="w-full px-4 py-2 mt-1 text-gray-700 bg-sky-100 border border-gray-300 rounded-md
                               focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent
                               focus:ring-opacity-50"
                              aria-describedby="messageError"></textarea>
                </div>
                <button type="submit" class="w-full px-4 py-2 font-medium text-white bg-blue-500 rounded-md hover:bg-blue-600 active:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50">Send Message</button>
            </form>
        </div>
    </div>

</div>
