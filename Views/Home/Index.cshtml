@{
    ViewData["Title"] = "";
    var educationList = TempData["EducationList"] as List<Education>;
    var projectList = TempData["projects"] as List<Projects>;
}

<div class="container-1">
    <div class="text-center-1 mt-3">
        <div class="main-content ">

            <div id="lottie-container">
                <h1 class="text-6xl text-dark">Hello,</h1>
                <div class="wave-text">
                    <h1 class="text-dark text-6xl"> I am <strong>Roshan</strong></h1>
                </div>
            </div>
        </div>

    </div>
    <div id="background"></div>
</div>




<h1 class="text-center text-5xl" id="about">About Me</h1>

<div class="flex flex-col md:flex-row items-center md:items-center mt-3">
    <div class="flex-none w-25 mb-4 md:mb-0 flex justify-center items-center">
        <div class="w-30 h-30">
            <img class="w-full h-full rounded-full" src="/img/ym.png" alt="Round Image" id="protectedImage">
        </div>
    </div>

    <div class="flex-1 md:text-left flex items-center">
        @if (TempData["About"] != null)
        {
            <h5 class="text-lg md:text-xl p-3">@TempData["About"]</h5>
        }
    </div>
</div>


@if (educationList != null)
{
    <div class="flex flex-col lg:flex-row items-center lg:items-stretch justify-center lg:justify-between bg-white shadow m-2 rounded-lg p-6">
        <div class="flex-1 lg:w-1/2 flex items-center justify-center p-6">
            <h1 class="text-2xl lg:text-4xl font-bold text-center">Education</h1>
        </div>
        <div class="flex-1 lg:w-1/2 p-6">

            @foreach (var education in educationList)
            {

                <p class="text-lg fw-bold">@education.Title</p>
                <p class="mt-2 text-lg mb-5">@education.Description</p>

            }
        </div>
    </div>
}



<h1 class="text-2xl lg:text-4xl font-bold text-center mt-5">Projects</h1>

<div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8 p-3">


    @if (projectList != null)
    {
        @foreach (var project in projectList)
        {
            <div class="bg-white p-6 rounded shadow">
                <h2 class="text-xl font-semibold mb-2">@project.Title</h2>
                <p class="mb-4">@project.Framework</p>
                <p class="mb-4">@project.Description</p>
                <a class="text-blue-500">Technologies used »</a>

                @if (project.Technology != null)
                {
                    @foreach (var tech in project.Technology)
                    {
                        <p>@tech.Name</p>
                    }
                }
            </div>
        }
    }


</div>


<div class="mt-3 flex items-center justify-center">
    <a href="/projects" class="relative inline-block px-5 py-3 bg-purple-600 text-white font-bold rounded-full shadow-lg transition-transform transform hover:scale-105 hover:bg-purple-700 focus:outline-none focus:ring-4 focus:ring-purple-400">
        <span class="absolute inset-0 w-full h-full bg-purple-500 rounded-full opacity-75 transition-opacity duration-300 hover:opacity-100"></span>
        <span class="relative">View More</span>
    </a>
</div>



<div class="main-content">
    <div>
        <h3 class="text-center text-4xl" id="contact">Contact Me </h3>
    </div>

    <div class="mt-6 text-center">
        <p class="text-gray-700 mb-4 text-2xl">Follow me on social media</p>
        <div class="flex justify-center space-x-4">
            <a href="https://www.instagram.com/_itzrzh_/" target="_blank" class="text-pink-500 hover:text-pink-700 transition-colors duration-300">
                <img src="/img/instagram.png" alt="Instagram" class="w-10 h-10">
            </a>
            <a href="https://www.linkedin.com/in/roshan-peter-309713302" target="_blank" class="text-pink-500 hover:text-pink-700 transition-colors duration-300">
                <img src="/img/lk.png" alt="LinkedIn" class="w-10 h-10">
            </a>
        </div>
    </div>
</div>
